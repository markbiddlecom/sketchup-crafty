source 'https://rubygems.org'

group :development do
  gem 'minitest' # Helps solargraph with code insight when you write unit tests.
  gem 'rubocop' # Static analysis of Ruby Code.
  gem 'rubocop-sketchup' # Static analysis of SketchUp extensions.
  gem 'sketchup-api-stubs' # Auto-complete for the SketchUp Ruby API.
  gem 'skippy' # Aid with common SketchUp extension tasks.
  gem 'solargraph', '>= 0.40.4' # For code-insight and RuboCop integration with VSCode.

  # Resolve conflicts
  gem 'parser', '>= 3.0'
  gem 'thor', '>= 1.0'
end

gem 'sorted_set', '~> 1.0'
